<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.buu.se.addressbook.Register">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/det_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/img_profile"
            android:layout_marginEnd="184dp"
            android:layout_marginBottom="340dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="First name"
            android:ems="10"
            android:id="@+id/reg_fname"
            android:layout_gravity="right|top"
            android:textColor="@color/icons" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Last name"
            android:ems="10"
            android:id="@+id/reg_lname"
            android:layout_gravity="right|top"
            android:layout_marginTop="38dp"
            android:textColor="@color/icons" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="username"
            android:ems="10"
            android:id="@+id/reg_user"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="-80dp"
            android:textColor="@color/icons" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionUnspecified" android:inputType="textPassword"
            android:hint="password"
            android:ems="10"
            android:id="@+id/reg_pass"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="-30dp"
            android:textColor="@color/icons" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageView3"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="-80dp"
            android:background="@drawable/user"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageView4"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="-30dp"
            android:background="@drawable/pass"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageView5"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/pass"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionUnspecified" android:inputType="textPassword"
            android:hint="confirm"
            android:ems="10"
            android:id="@+id/reg_confirm"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="20dp"
            android:textColor="@color/icons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="SIGN UP"
            android:id="@+id/btn_signup"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClickSignUp"
            android:background="@color/accent" />

    </FrameLayout>

</RelativeLayout>
