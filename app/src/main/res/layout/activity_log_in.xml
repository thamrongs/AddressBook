<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/login"
    tools:context="com.buu.se.addressbook.LogIn"
    android:id="@+id/loginlayout">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="541dp"
        android:layout_marginTop="-32dp"
        >

        <AutoCompleteTextView android:id="@+id/email" android:layout_width="189dp"
            android:layout_height="30dp" android:hint="Username"
            android:inputType="textEmailAddress" android:maxLines="1"
            android:singleLine="true"
            android:layout_gravity="center"
            android:background="#00000000"
            android:textColorHint="#B6B6B6"
            android:textColor="#00796B"
            android:layout_marginTop="-34dp"
            android:layout_marginLeft="15dp" />

        <EditText android:id="@+id/password" android:layout_width="192dp"
            android:layout_height="30dp" android:hint="Password"
            android:imeOptions="actionUnspecified" android:inputType="textPassword"
            android:maxLines="1" android:singleLine="true"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:textColorHint="#B6B6B6"
            android:textColor="#00796B"
            android:layout_marginLeft="15dp" />

        <Button
            android:layout_width="237dp"
            android:layout_height="40dp"
            android:text="LOG IN"
            android:id="@+id/btn_login"
            android:layout_gravity="center"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="-4dp"
            android:background="#D32F2F"
            android:onClick="onClickLogin" />

        <Button
            android:layout_width="237dp"
            android:layout_height="40dp"
            android:text="REGISTER"
            android:id="@+id/btn_register"
            android:layout_gravity="center"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="160dp"
            android:background="#727272" />

    </FrameLayout>
</RelativeLayout>
