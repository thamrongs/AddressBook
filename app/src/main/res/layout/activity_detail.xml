<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.buu.se.addressbook.Detail"
    android:id="@+id/detail_address">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/det_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/img_profile"
            android:layout_marginEnd="184dp"
            android:layout_marginBottom="340dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/det_name"
            android:layout_gravity="right|top"
            android:textColor="@color/icons" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Company Name"
            android:ems="10"
            android:id="@+id/det_company"
            android:layout_gravity="right|top"
            android:layout_marginTop="38dp"
            android:textColor="@color/icons" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="myemail@mail.com"
            android:ems="10"
            android:id="@+id/det_email"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="-100dp"
            android:textColor="@color/icons" />

        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:id="@+id/imageView3"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="-100dp"
            android:background="@android:drawable/ic_dialog_email"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="54dp"
            android:id="@+id/add_telephone"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="-50dp"
            android:background="@android:drawable/ic_input_add"
            android:layout_marginLeft="10dp"
            android:onClick="onClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="DELETE"
            android:id="@+id/btn_delete"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#D32F2F"
            android:onClick="onClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="SAVE"
            android:id="@+id/btn_edit"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/divider"
            android:onClick="onClick"
            android:layout_marginBottom="63dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="ADD NEW"
            android:id="@+id/btn_add"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#4CAF50"
            android:onClick="onClick" />

        <ListView
            android:layout_width="243dp"
            android:layout_height="150dp"
            android:id="@+id/list_telephone"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="45dp"
            android:clickable="false" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="080-0000000"
            android:ems="10"
            android:id="@+id/add_phone"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="-50dp" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="54dp"
            android:id="@+id/imageView2"
            android:layout_gravity="left|center_vertical"
            android:background="@android:drawable/ic_menu_call"
            android:layout_marginLeft="10dp"
            android:onClick="onClick" />

    </FrameLayout>

</RelativeLayout>
